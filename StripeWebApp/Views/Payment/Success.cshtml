@{
    Layout = null; // Optional if you're not using a layout page
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thank You for Your Order!</title>
    <link rel="stylesheet" href="~/css/style.css" />
    <style>
        body {
            background: #f5f5f5;
            font-family: Arial, sans-serif;
            color: #333;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .thank-you-container {
            background: #ffffff;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            text-align: center;
            max-width: 500px;
            width: 100%;
        }

            .thank-you-container h1 {
                font-size: 2em;
                color: #4CAF50;
                margin-bottom: 20px;
            }

            .thank-you-container p {
                font-size: 1.2em;
                line-height: 1.5;
                margin: 0;
            }

            .thank-you-container a {
                color: #4CAF50;
                text-decoration: none;
                font-weight: bold;
            }

                .thank-you-container a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="thank-you-container">
        <h1>Thank You!</h1>
        <p>
            We appreciate your business! Your order has been successfully placed.
        </p>
        <p>
            If you have any questions, please email us at
            <a href="mailto:orders@symphonymart.com">orders@symphonymart.com</a>.
        </p>
    </div>
</body>
</html>
